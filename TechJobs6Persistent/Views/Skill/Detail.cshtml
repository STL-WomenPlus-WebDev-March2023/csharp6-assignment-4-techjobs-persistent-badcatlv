+@using TechJobs6Persistent.Models
@model Skill

@if (Model.Jobs.ToList().Count == 0)
{
    <h1>No Jobs with the given skills</h1>
}
else
{
    <h1>Jobs with the following skill: @Model.SkillName</h1>

    <ul>
        @foreach (var skill in Model.Jobs)
        {
            <li>@skill.Name</li>
            <p><a asp-controller="Employer" asp-action="About" asp-route-id=@skill.EmployerId>Employer Info</a></p>
            <p><a asp-controller="Job" asp-action="Detail" asp-route-id=@skill.Id>Job Info</a></p>

        }
       
        
    </ul>
}
